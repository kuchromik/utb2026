rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Rules for customer collection
    match /customer/{customerId} {
      // Only authenticated users can read customers
      allow read: if isAuthenticated();
      
      // Only authenticated users can create, update, delete customers
      allow write: if isAuthenticated();
    }
    
    // Rules for Jobs collection
    match /Jobs/{jobId} {
      // Only authenticated users can read jobs
      allow read: if isAuthenticated();
      
      // Only authenticated users can create, update, delete jobs
      allow write: if isAuthenticated();
    }
    
    // Rules for VatRates collection
    match /VatRates/{rateId} {
      // Only authenticated users can read VAT rates
      allow read: if isAuthenticated();
      
      // Only authenticated users can create, update, delete VAT rates
      allow write: if isAuthenticated();
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
